<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Housing like #<%= @housing_like.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/housing_likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @housing_like.sublessee %>
          <a href="/housing_likes/<%= @housing_like.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit housing_like
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @housing_like.sublessee %>
          <a href="/delete_housing_like/<%= @housing_like.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete housing_like
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Sublessee
      </dt>
      <dd>
        <% if @housing_like.sublessee.present? %>
          <a href="/users/<%= @housing_like.sublessee_id %>">
            <%= @housing_like.sublessee.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Housing
      </dt>
      <dd>
        <% if @housing_like.housing.present? %>
          <a href="/housing_listings/<%= @housing_like.housing_id %>">
            <%= @housing_like.housing.housing_type %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@housing_like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@housing_like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

