<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All housing likes
    </h1>

    <a href="/housing_likes/new" class="btn btn-block btn-outline-secondary">
      Add a new housing like
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "housing_like_templates/housing_likes_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sublessee
        </th>

        <th>
          Housing
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @housing_likes.each do |housing_like| %>
      <tr>
        <!-- Display housing_like.id start -->
        <td>
          <%= housing_like.id %>
        </td>
        <!-- Display housing_like.id end -->

        <!-- Display housing_like.sublessee_id start -->
        <td>
          <% if housing_like.sublessee.present? %>
            <a href="/users/<%= housing_like.sublessee.id %>">
              <%= housing_like.sublessee.email %>
            </a>
          <% end %>
        </td>
        <!-- Display housing_like.sublessee_id end -->

        <!-- Display housing_like.housing_id start -->
        <td>
          <% if housing_like.housing.present? %>
            <a href="/housing_listings/<%= housing_like.housing.id %>">
              <%= housing_like.housing.housing_type %>
            </a>
          <% end %>
        </td>
        <!-- Display housing_like.housing_id end -->

        <!-- Display housing_like.created_at start -->
        <td>
          <%= time_ago_in_words(housing_like.created_at) %> ago
        </td>
        <!-- Display housing_like.created_at end -->

        <!-- Display housing_like.updated_at start -->
        <td>
          <%= time_ago_in_words(housing_like.updated_at) %> ago
        </td>
        <!-- Display housing_like.updated_at end -->

        <td>
          <a href="/housing_likes/<%= housing_like.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @housing_likes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
