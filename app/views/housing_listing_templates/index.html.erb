<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All housing listings
    </h1>

    <a href="/housing_listings/new" class="btn btn-block btn-outline-secondary">
      Add a new housing listing
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "housing_listing_templates/housing_listings_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Housing type
        </th>

        <th>
          City
        </th>

        <th>
          Neighborhood
        </th>

        <th>
          Number of guests
        </th>

        <th>
          Number of bedrooms
        </th>

        <th>
          Number of bathrooms
        </th>

        <th>
          State
        </th>

        <th>
          Country
        </th>

        <th>
          Amenities
        </th>

        <th>
          Description
        </th>

        <th>
          Monthly price
        </th>

        <th>
          Sublessor
        </th>

        <th>
          Available from
        </th>

        <th>
          Available till
        </th>

        <th>
          Housing photo
        </th>

        <th>
          Sublessee
        </th>

        <th>
          Zip code
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @housing_listings.each do |housing_listing| %>
      <tr>
        <!-- Display housing_listing.id start -->
        <td>
          <%= housing_listing.id %>
        </td>
        <!-- Display housing_listing.id end -->

        <!-- Display housing_listing.housing_type start -->
        <td>
          <%= housing_listing.housing_type %>
        </td>
        <!-- Display housing_listing.housing_type end -->

        <!-- Display housing_listing.city start -->
        <td>
          <%= housing_listing.city %>
        </td>
        <!-- Display housing_listing.city end -->

        <!-- Display housing_listing.neighborhood start -->
        <td>
          <%= housing_listing.neighborhood %>
        </td>
        <!-- Display housing_listing.neighborhood end -->

        <!-- Display housing_listing.number_of_guests start -->
        <td>
          <%= housing_listing.number_of_guests %>
        </td>
        <!-- Display housing_listing.number_of_guests end -->

        <!-- Display housing_listing.number_of_bedrooms start -->
        <td>
          <%= housing_listing.number_of_bedrooms %>
        </td>
        <!-- Display housing_listing.number_of_bedrooms end -->

        <!-- Display housing_listing.number_of_bathrooms start -->
        <td>
          <%= housing_listing.number_of_bathrooms %>
        </td>
        <!-- Display housing_listing.number_of_bathrooms end -->

        <!-- Display housing_listing.state start -->
        <td>
          <%= housing_listing.state %>
        </td>
        <!-- Display housing_listing.state end -->

        <!-- Display housing_listing.country start -->
        <td>
          <%= housing_listing.country %>
        </td>
        <!-- Display housing_listing.country end -->

        <!-- Display housing_listing.amenities start -->
        <td>
          <%= housing_listing.amenities %>
        </td>
        <!-- Display housing_listing.amenities end -->

        <!-- Display housing_listing.description start -->
        <td>
          <%= housing_listing.description %>
        </td>
        <!-- Display housing_listing.description end -->

        <!-- Display housing_listing.monthly_price start -->
        <td>
          <%= housing_listing.monthly_price %>
        </td>
        <!-- Display housing_listing.monthly_price end -->

        <!-- Display housing_listing.sublessor_id start -->
        <td>
          <% if housing_listing.sublessor.present? %>
            <a href="/users/<%= housing_listing.sublessor.id %>">
              <%= housing_listing.sublessor.email %>
            </a>
          <% end %>
        </td>
        <!-- Display housing_listing.sublessor_id end -->

        <!-- Display housing_listing.available_from start -->
        <td>
          <%= housing_listing.available_from %>
        </td>
        <!-- Display housing_listing.available_from end -->

        <!-- Display housing_listing.available_till start -->
        <td>
          <%= housing_listing.available_till %>
        </td>
        <!-- Display housing_listing.available_till end -->

        <!-- Display housing_listing.housing_photo_id start -->
        <td>
          <%= housing_listing.housing_photo_id %>
        </td>
        <!-- Display housing_listing.housing_photo_id end -->

        <!-- Display housing_listing.sublessee_id start -->
        <td>
          <%= housing_listing.sublessee_id %>
        </td>
        <!-- Display housing_listing.sublessee_id end -->

        <!-- Display housing_listing.zip_code start -->
        <td>
          <%= housing_listing.zip_code %>
        </td>
        <!-- Display housing_listing.zip_code end -->

        <!-- Display housing_listing.created_at start -->
        <td>
          <%= time_ago_in_words(housing_listing.created_at) %> ago
        </td>
        <!-- Display housing_listing.created_at end -->

        <!-- Display housing_listing.updated_at start -->
        <td>
          <%= time_ago_in_words(housing_listing.updated_at) %> ago
        </td>
        <!-- Display housing_listing.updated_at end -->

        <td>
          <a href="/housing_listings/<%= housing_listing.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @housing_listings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
