<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bookings

    <a data-toggle="collapse" href="#housing_listing_bookings_new_form">
      Add booking
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @housing_listing.bookings.each do |booking| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/bookings/<%= booking.id %>">
          <%= booking.sublessor_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_booking_from_housing/<%= booking.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="housing_listing_bookings_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "housing_listing_templates/housing_listing_bookings_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
