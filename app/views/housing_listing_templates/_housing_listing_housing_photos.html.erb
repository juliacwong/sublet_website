<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Housing Photos

    <a data-toggle="collapse" href="#housing_listing_housing_photos_new_form">
      Add housing photo
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @housing_listing.housing_photos.each do |housing_photo| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/housing_photos/<%= housing_photo.id %>">
          <%= housing_photo.photo_caption %>
        </a>

        <%if current_user == housing_photo.photo_owner %>
          <a href="/delete_housing_photo_from_housing_listing/<%= housing_photo.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="housing_listing_housing_photos_new_form">
        <%= render partial: "housing_listing_templates/housing_listing_housing_photos_new_form" %>
      </div>
    </div>

  </ul>
</div>
