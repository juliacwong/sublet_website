<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Housing Photos

    <a data-toggle="collapse" href="#housing_listing_housing_photos_new_form">
      Add housing photo
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @housing_listing.housing_photos.each do |housing_photo| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/housing_photos/<%= housing_photo.id %>">
          <%= housing_photo.photo_caption %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_housing_photo_from_housing/<%= housing_photo.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="housing_listing_housing_photos_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "housing_listing_templates/housing_listing_housing_photos_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
