<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Inquiries

    <a data-toggle="collapse" href="#housing_listing_inquiries_new_form">
      Add inquiry
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @housing_listing.inquiries.each do |inquiry| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/inquiries/<%= inquiry.id %>">
          <%= inquiry.sublessee_id %>
        </a>

        <a href="/delete_inquiry_from_housing/<%= inquiry.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="housing_listing_inquiries_new_form">
        <%= render partial: "housing_listing_templates/housing_listing_inquiries_new_form" %>
      </div>
    </div>

  </ul>
</div>
