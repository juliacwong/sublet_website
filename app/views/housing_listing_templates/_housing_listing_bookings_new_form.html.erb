<!-- Form booking start -->
<form action="/create_booking_from_housing_listing" method="post">
<!-- Form booking end -->

  <!-- Label and input for sublessor_id start -->
  <div class="form-group">
    <label for="sublessor_id">
      Sublessor
    </label>

    <!-- Input for sublessor_id start -->
    <input type="text" id="sublessor_id" name="sublessor_id" class="form-control" value="<%= @booking.sublessor_id %>">
    <!-- Input for sublessor_id end -->
  </div>
  <!-- Label and input for sublessor_id end -->

  <!-- Label and input for sublessee_id start -->
  <div class="form-group">
    <label for="sublessee_id">
      Sublessee
    </label>

    <!-- Input for sublessee_id start -->
    <input type="text" id="sublessee_id" name="sublessee_id" class="form-control" value="<%= @booking.sublessee_id %>">
    <!-- Input for sublessee_id end -->
  </div>
  <!-- Label and input for sublessee_id end -->

  <!-- Label and input for payment_method start -->
  <div class="form-group">
    <label for="payment_method">
      Payment method
    </label>

    <!-- Input for payment_method start -->
    <input type="text" id="payment_method" name="payment_method" class="form-control" value="<%= @booking.payment_method %>">
    <!-- Input for payment_method end -->
  </div>
  <!-- Label and input for payment_method end -->

  <!-- Label and input for housing_id start -->
  <!-- Input for housing_id start -->
  <input type="hidden" name="housing_id" value="<%= @housing_listing.id %>">
  <!-- Input for housing_id end -->

  <!-- Label and input for booking_details start -->
  <div class="form-group">
    <label for="booking_details">
      Booking details
    </label>

    <!-- Input for booking_details start -->
    <input type="text" id="booking_details" name="booking_details" class="form-control" value="<%= @booking.booking_details %>">
    <!-- Input for booking_details end -->
  </div>
  <!-- Label and input for booking_details end -->

  <button class="btn btn-block btn-outline-secondary">
    Create booking
  </button>
</form>
