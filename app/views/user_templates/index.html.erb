<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All users
    </h1>

    <a href="/users/new" class="btn btn-block btn-outline-secondary">
      Add a new user
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Employer or school
        </th>

        <th>
          Linkedin url
        </th>

        <th>
          Sublessor status
        </th>

        <th>
          Sublessee status
        </th>

        <th>
          Bio
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <!-- Display user.id start -->
        <td>
          <%= user.id %>
        </td>
        <!-- Display user.id end -->

        <!-- Display user.email start -->
        <td>
          <%= user.email %>
        </td>
        <!-- Display user.email end -->

        <!-- Display user.password start -->
        <td>
          <%= user.password %>
        </td>
        <!-- Display user.password end -->

        <!-- Display user.employer_or_school start -->
        <td>
          <%= user.employer_or_school %>
        </td>
        <!-- Display user.employer_or_school end -->

        <!-- Display user.linkedin_url start -->
        <td>
          <%= user.linkedin_url %>
        </td>
        <!-- Display user.linkedin_url end -->

        <!-- Display user.sublessor_status start -->
        <td>
          <%= user.sublessor_status %>
        </td>
        <!-- Display user.sublessor_status end -->

        <!-- Display user.sublessee_status start -->
        <td>
          <%= user.sublessee_status %>
        </td>
        <!-- Display user.sublessee_status end -->

        <!-- Display user.bio start -->
        <td>
          <%= user.bio %>
        </td>
        <!-- Display user.bio end -->

        <!-- Display user.first_name start -->
        <td>
          <%= user.first_name %>
        </td>
        <!-- Display user.first_name end -->

        <!-- Display user.last_name start -->
        <td>
          <%= user.last_name %>
        </td>
        <!-- Display user.last_name end -->

        <!-- Display user.created_at start -->
        <td>
          <%= time_ago_in_words(user.created_at) %> ago
        </td>
        <!-- Display user.created_at end -->

        <!-- Display user.updated_at start -->
        <td>
          <%= time_ago_in_words(user.updated_at) %> ago
        </td>
        <!-- Display user.updated_at end -->

        <td>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
