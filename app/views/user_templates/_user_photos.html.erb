<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Photos

    <a data-toggle="collapse" href="#user_photos_new_form">
      Add housing photo
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.photos.each do |housing_photo| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/housing_photos/<%= housing_photo.id %>">
          <%= housing_photo.photo_caption %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
