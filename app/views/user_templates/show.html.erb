<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User #<%= @user.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/users" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link user start -->
      <div class="col">
        <a href="/users/<%= @user.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit user
        </a>
      </div>
      <!-- Edit link user end -->

    </div>

    <dl>
      <dt>
        Email
      </dt>
      <!-- Display email start -->
      <dd>
        <%= @user.email %>
      </dd>
      <!-- Display email end -->

      <dt>
        Password
      </dt>
      <!-- Display password start -->
      <dd>
        <%= @user.password %>
      </dd>
      <!-- Display password end -->

      <dt>
        Employer or school
      </dt>
      <!-- Display employer_or_school start -->
      <dd>
        <%= @user.employer_or_school %>
      </dd>
      <!-- Display employer_or_school end -->

      <dt>
        Linkedin url
      </dt>
      <!-- Display linkedin_url start -->
      <dd>
        <%= @user.linkedin_url %>
      </dd>
      <!-- Display linkedin_url end -->

      <dt>
        Sublessor status
      </dt>
      <!-- Display sublessor_status start -->
      <dd>
        <%= @user.sublessor_status %>
      </dd>
      <!-- Display sublessor_status end -->

      <dt>
        Sublessee status
      </dt>
      <!-- Display sublessee_status start -->
      <dd>
        <%= @user.sublessee_status %>
      </dd>
      <!-- Display sublessee_status end -->

      <dt>
        Bio
      </dt>
      <!-- Display bio start -->
      <dd>
        <%= @user.bio %>
      </dd>
      <!-- Display bio end -->

      <dt>
        First name
      </dt>
      <!-- Display first_name start -->
      <dd>
        <%= @user.first_name %>
      </dd>
      <!-- Display first_name end -->

      <dt>
        Last name
      </dt>
      <!-- Display last_name start -->
      <dd>
        <%= @user.last_name %>
      </dd>
      <!-- Display last_name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@user.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@user.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

