<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <!-- Form html options start -->
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <!-- Form html options end -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          
          <!-- Devise Input for employer_or_school start -->
          <div class="form-group">
            <% employer_or_school_was_invalid = resource.errors.include?(:employer_or_school) %>

            <% employer_or_school_class = "form-control" %>

            <% if was_validated %>
              <% if employer_or_school_was_invalid %>
                <% employer_or_school_class << " is-invalid" %>
              <% else %>
                <% employer_or_school_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :employer_or_school %>

            <%= f.text_field :employer_or_school, :class => employer_or_school_class, :placeholder => "Enter employer or school" %>

            <% if employer_or_school_was_invalid %>
              <% resource.errors.full_messages_for(:employer_or_school).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for employer_or_school end -->
          
          <!-- Devise Input for linkedin_url start -->
          <div class="form-group">
            <% linkedin_url_was_invalid = resource.errors.include?(:linkedin_url) %>

            <% linkedin_url_class = "form-control" %>

            <% if was_validated %>
              <% if linkedin_url_was_invalid %>
                <% linkedin_url_class << " is-invalid" %>
              <% else %>
                <% linkedin_url_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :linkedin_url %>

            <%= f.text_field :linkedin_url, :class => linkedin_url_class, :placeholder => "Enter linkedin url" %>

            <% if linkedin_url_was_invalid %>
              <% resource.errors.full_messages_for(:linkedin_url).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for linkedin_url end -->
          
          <!-- Devise Input for sublessor_status start -->
          <div class="form-group">
            <% sublessor_status_was_invalid = resource.errors.include?(:sublessor_status) %>

            <% sublessor_status_class = "form-control" %>

            <% if was_validated %>
              <% if sublessor_status_was_invalid %>
                <% sublessor_status_class << " is-invalid" %>
              <% else %>
                <% sublessor_status_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :sublessor_status %>

            <%= f.text_field :sublessor_status, :class => sublessor_status_class, :placeholder => "Enter sublessor status" %>

            <% if sublessor_status_was_invalid %>
              <% resource.errors.full_messages_for(:sublessor_status).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for sublessor_status end -->
          
          <!-- Devise Input for sublessee_status start -->
          <div class="form-group">
            <% sublessee_status_was_invalid = resource.errors.include?(:sublessee_status) %>

            <% sublessee_status_class = "form-control" %>

            <% if was_validated %>
              <% if sublessee_status_was_invalid %>
                <% sublessee_status_class << " is-invalid" %>
              <% else %>
                <% sublessee_status_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :sublessee_status %>

            <%= f.text_field :sublessee_status, :class => sublessee_status_class, :placeholder => "Enter sublessee status" %>

            <% if sublessee_status_was_invalid %>
              <% resource.errors.full_messages_for(:sublessee_status).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for sublessee_status end -->
          
          <!-- Devise Input for bio start -->
          <div class="form-group">
            <% bio_was_invalid = resource.errors.include?(:bio) %>

            <% bio_class = "form-control" %>

            <% if was_validated %>
              <% if bio_was_invalid %>
                <% bio_class << " is-invalid" %>
              <% else %>
                <% bio_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :bio %>

            <%= f.text_field :bio, :class => bio_class, :placeholder => "Enter bio" %>

            <% if bio_was_invalid %>
              <% resource.errors.full_messages_for(:bio).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for bio end -->
          
          <!-- Devise Input for first_name start -->
          <div class="form-group">
            <% first_name_was_invalid = resource.errors.include?(:first_name) %>

            <% first_name_class = "form-control" %>

            <% if was_validated %>
              <% if first_name_was_invalid %>
                <% first_name_class << " is-invalid" %>
              <% else %>
                <% first_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :first_name %>

            <%= f.text_field :first_name, :class => first_name_class, :placeholder => "Enter first name" %>

            <% if first_name_was_invalid %>
              <% resource.errors.full_messages_for(:first_name).each do |message| %>
