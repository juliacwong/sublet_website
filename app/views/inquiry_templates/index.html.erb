<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All inquiries
    </h1>

    <a href="/inquiries/new" class="btn btn-block btn-outline-secondary">
      Add a new inquiry
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "inquiry_templates/inquiries_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sublessee
        </th>

        <th>
          Sublessor
        </th>

        <th>
          Housing
        </th>

        <th>
          Inquiry details
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @inquiries.each do |inquiry| %>
      <tr>
        <td>
          <%= inquiry.id %>
        </td>

        <td>
          <% if inquiry.sublessee.present? %>
            <a href="/users/<%= inquiry.sublessee.id %>">
              <%= inquiry.sublessee.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= inquiry.sublessor_id %>
        </td>

        <td>
          <% if inquiry.housing.present? %>
            <a href="/housing_listings/<%= inquiry.housing.id %>">
              <%= inquiry.housing.housing_type %>
            </a>
          <% end %>
        </td>

        <td>
          <%= inquiry.inquiry_details %>
        </td>

        <td>
          <%= time_ago_in_words(inquiry.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(inquiry.updated_at) %> ago
        </td>

        <td>
          <a href="/inquiries/<%= inquiry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @inquiries, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
