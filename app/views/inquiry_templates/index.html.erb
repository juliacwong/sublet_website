<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All inquiries
    </h1>

    <a href="/inquiries/new" class="btn btn-block btn-outline-secondary">
      Add a new inquiry
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sublessee
        </th>

        <th>
          Sublessor
        </th>

        <th>
          Housing
        </th>

        <th>
          Inquiry details
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @inquiries.each do |inquiry| %>
      <tr>
        <!-- Display inquiry.id start -->
        <td>
          <%= inquiry.id %>
        </td>
        <!-- Display inquiry.id end -->

        <!-- Display inquiry.sublessee_id start -->
        <td>
          <%= inquiry.sublessee.email %>
        </td>
        <!-- Display inquiry.sublessee_id end -->

        <!-- Display inquiry.sublessor_id start -->
        <td>
          <%= inquiry.sublessor_id %>
        </td>
        <!-- Display inquiry.sublessor_id end -->

        <!-- Display inquiry.housing_id start -->
        <td>
          <%= inquiry.housing.housing_type %>
        </td>
        <!-- Display inquiry.housing_id end -->

        <!-- Display inquiry.inquiry_details start -->
        <td>
          <%= inquiry.inquiry_details %>
        </td>
        <!-- Display inquiry.inquiry_details end -->

        <!-- Display inquiry.created_at start -->
        <td>
          <%= time_ago_in_words(inquiry.created_at) %> ago
        </td>
        <!-- Display inquiry.created_at end -->

        <!-- Display inquiry.updated_at start -->
        <td>
          <%= time_ago_in_words(inquiry.updated_at) %> ago
        </td>
        <!-- Display inquiry.updated_at end -->

        <td>
          <a href="/inquiries/<%= inquiry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
