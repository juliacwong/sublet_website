<% if @inquiry.errors.any? %>
  <% @inquiry.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit inquiry #<%= @inquiry.id %>
</h1>

<hr>

<form action="/update_inquiry/<%= @inquiry.id %>" method="post">

  <div class="form-group">
    <label for="sublessee_id">
      Sublessee
    </label>

    <%= select_tag(:sublessee_id, options_from_collection_for_select(User.all, :id, :email, @inquiry.sublessee_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="sublessor_id">
      Sublessor
    </label>

    <input type="text" id="sublessor_id" name="sublessor_id" class="form-control" value="<%= @inquiry.sublessor_id %>">
  </div>

  <div class="form-group">
    <label for="housing_id">
      Housing
    </label>

    <%= select_tag(:housing_id, options_from_collection_for_select(HousingListing.all, :id, :housing_type, @inquiry.housing_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="inquiry_details">
      Inquiry details
    </label>

    <input type="text" id="inquiry_details" name="inquiry_details" class="form-control" value="<%= @inquiry.inquiry_details %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update inquiry
  </button>
</form>

<hr>

<a href="/inquiries">
  Go back
</a>
