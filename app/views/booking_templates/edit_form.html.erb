<h1>
  Edit booking #<%= @booking.id %>
</h1>

<hr>

<form action="/update_booking/<%= @booking.id %>" method="post">

  <div class="form-group">
    <label for="sublessor_id">
      Sublessor
    </label>

    <input type="text" id="sublessor_id" name="sublessor_id" class="form-control" value="<%= @booking.sublessor_id %>">
  </div>


  <div class="form-group">
    <label for="payment_method">
      Payment method
    </label>

    <input type="text" id="payment_method" name="payment_method" class="form-control" value="<%= @booking.payment_method %>">
  </div>

  <div class="form-group">
    <label for="housing_id">
      Housing
    </label>

    <%= select_tag(:housing_id, options_from_collection_for_select(HousingListing.all, :id, :housing_type, @booking.housing_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="booking_details">
      Booking details
    </label>

    <input type="text" id="booking_details" name="booking_details" class="form-control" value="<%= @booking.booking_details %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update booking
  </button>
</form>

<hr>

<a href="/bookings">
  Go back
</a>
