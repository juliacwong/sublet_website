<h1>
  Add a new booking
</h1>


<hr>

<form action="/create_booking" method="post">

  <div class="form-group">
    <label for="sublessor_id">
      Sublessor
    </label>

    <input type="text" id="sublessor_id" name="sublessor_id" class="form-control">
  </div>

  <input type="hidden" name="sublessee_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="payment_method">
      Payment method
    </label>

    <input type="text" id="payment_method" name="payment_method" class="form-control">
  </div>

  <div class="form-group">
    <label for="housing_id">
      Housing
    </label>

    <%= select_tag(:housing_id, options_from_collection_for_select(HousingListing.all, :id, :housing_type, @booking.housing_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="booking_details">
      Booking details
    </label>

    <input type="text" id="booking_details" name="booking_details" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create booking
  </button>
</form>

<hr>

<a href="/bookings">
  Go back
</a>
