<% if @housing_photo.errors.any? %>
  <% @housing_photo.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit housing photo #<%= @housing_photo.id %>
</h1>

<hr>

<form action="/update_housing_photo/<%= @housing_photo.id %>" method="post">

  <div class="form-group">
    <label for="photo_caption">
      Photo caption
    </label>

    <input type="text" id="photo_caption" name="photo_caption" class="form-control" value="<%= @housing_photo.photo_caption %>">
  </div>


  <div class="form-group">
    <label for="housing_id">
      Housing
    </label>

    <%= select_tag(:housing_id, options_from_collection_for_select(HousingListing.all, :id, :housing_type, @housing_photo.housing_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update housing photo
  </button>
</form>

<hr>

<a href="/housing_photos">
  Go back
</a>
