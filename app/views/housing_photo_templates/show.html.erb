<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Housing photo #<%= @housing_photo.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/housing_photos" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @housing_photo.photo_owner %>
          <a href="/housing_photos/<%= @housing_photo.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit housing_photo
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @housing_photo.photo_owner %>
          <a href="/delete_housing_photo/<%= @housing_photo.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete housing_photo
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Photo caption
      </dt>
      <dd>
        <%= @housing_photo.photo_caption %>
      </dd>

      <dt>
        Photo owner
      </dt>
      <dd>
        <% if @housing_photo.photo_owner.present? %>
          <a href="/users/<%= @housing_photo.photo_owner_id %>">
            <%= @housing_photo.photo_owner.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Housing
      </dt>
      <dd>
        <% if @housing_photo.housing.present? %>
          <a href="/housing_listings/<%= @housing_photo.housing_id %>">
            <%= @housing_photo.housing.housing_type %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@housing_photo.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@housing_photo.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

